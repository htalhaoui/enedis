{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mission list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Ville</th>
                <th>Adresse</th>
                <th>Descriptif</th>
                <th>Photo</th>
                <th>Contact</th>
                <th>Datedecreation</th>
                <th>Representantterritorial</th>
                <th>Managerencharge</th>
                <th>Etat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mission in missions %}
            <tr>
                <td><a href="{{ path('missions_show', { 'id': mission.id }) }}">{{ mission.id }}</a></td>
                <td>{{ mission.titre }}</td>
                <td>{{ mission.ville }}</td>
                <td>{{ mission.adresse }}</td>
                <td>{{ mission.descriptif }}</td>
                <td>{{ mission.photo }}</td>
                <td>{{ mission.contact }}</td>
                <td>{{ mission.dateDeCreation|date('d:m:y') }}</td>
                <td>{{ mission.representantTerritorial }}</td>
                <td>{{ mission.managerEnCharge }}</td>
                <td>{{ mission.etat }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('missions_show', { 'id': mission.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('missions_edit', { 'id': mission.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('missions_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
