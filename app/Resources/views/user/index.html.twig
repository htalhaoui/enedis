{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste d'utilisateurs</h1>

    <table>
        <thead>
            <tr>
                <th>NNI</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('admin_users_show', { 'id': user.id }) }}">{{ user.nni }}</a></td>
                <td>
                    <ul>
                        {% if user.isEnabled() %}
                        <li>
                            <a href="{{ path('admin_users_activate', { 'id': user.id }) }}">Desactiver</a>
                        </li>
                        {% endif %}
                        {% if user.isEnabled()==false %}
                        <li>
                            <a href="{{ path('admin_users_activate', { 'id': user.id }) }}">Activer</a>
                        </li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_users_new') }}">Ajouter un utilisateur</a>
        </li>
    </ul>
{% endblock %}
